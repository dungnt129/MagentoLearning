<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
   <update handle="default_head_blocks" />
    <body>
        <!--Header-->
        <referenceContainer name="header.container" htmlId="header" htmlClass="">
            <referenceContainer name="header.panel.wrapper" htmlTag="div" htmlClass="header_top">
                <block class="Dmit\Eshoper\Block\HeaderTop" name="dmit_headertop" template="Dmit_Eshoper::header_top_block.phtml"/>
            </referenceContainer>
            <referenceContainer name="header-wrapper" htmlTag="div" htmlClass="header-middle">
                <container name="header-middle-top" htmlTag="div" htmlClass="container">
                    <container htmlTag="div" htmlClass="row">
                        <container name="header-logo" htmlTag="div" htmlClass="col-sm-4"/>
                        <container htmlTag="div" htmlClass="col-sm-8">
                            <container name="header-shop-menu" htmlTag="div" htmlClass="shop-menu pull-right"/>
                        </container>
                    </container>
                </container>
            </referenceContainer>
            <referenceContainer name="page.top" htmlTag="div" htmlClass="header-bottom">
                <container htmlTag="div" htmlClass="container">
                    <container htmlTag="div" htmlClass="row">
                        <container htmlTag="div" htmlClass="col-sm-9">
                            <container name="navigation.sections"/>
                        </container>
                        <container htmlTag="div" htmlClass="col-sm-3">
                            <container name="top_search" htmlTag="div" htmlClass="search_box pull-right"/>
                        </container>
                    </container>
                </container>
            </referenceContainer>
        </referenceContainer>
        <!--End header-->


        <referenceContainer name="main">
            <referenceContainer name="content.top">
                <container htmlTag="section" htmlId="slider">
                    <container htmlTag="div" htmlClass="container">
                        <container htmlTag="div" htmlClass="row">
                            <container name="Eshoper Banner" label="Eshoper Banner" as="eshoper_banner" htmlTag="div" htmlClass="col-sm-12"/>
                        </container>
                    </container>
                </container>
            </referenceContainer>
            <referenceContainer name="content">
                <container htmlTag="section">
                    <container htmlTag="div" htmlClass="container">
                        <container htmlTag="div" htmlClass="row">
                            <container htmlTag="div" htmlClass="col-sm-3">
                                <block class="Dmit\Eshoper\Block\HeaderTop" template="Dmit_Eshoper::content_left_menu.phtml"/>
                            </container>
                            <container htmlTag="div" htmlClass="col-sm-9 padding-right">
                                <block class="Dmit\Eshoper\Block\HeaderTop" name="content_right_features_items" template="Dmit_Eshoper::content_right_features_items.phtml"/>
                                <block class="Magento\Framework\View\Element\Template" name="content_category_tab" template="Dmit_Eshoper::category_tab.phtml" />
                                <block class="Magento\Framework\View\Element\Template" name="content_category_tab" template="Dmit_Eshoper::recommended_items.phtml" />
                            </container>
                        </container>
                    </container>
                </container>
            </referenceContainer>

        </referenceContainer>



        <referenceContainer name="footer-container" htmlId="footer" htmlClass="">
            <container name="footer_top" htmlTag="div" htmlClass="footer-top">
                <block class="Magento\Framework\View\Element\Template" name="content_category_tab" template="Dmit_Eshoper::footer_widget.phtml" />
            </container>
            <container name="footer_widget" htmlTag="div" htmlClass="footer-widget">
                <container name="footer_top_container" htmlTag="div" htmlClass="container">
                    <container htmlTag="div" htmlClass="row">
                        <container name="eshoper_footer_services" label="Eshoper Footer Services" as="eshoper_footer_services" htmlTag="div" htmlClass="col-sm-2"/>
                        <container name="eshoper_footer_quock_shop" label="Eshoper Footer Quock Shop" as="eshoper_footer_quock_shop" htmlTag="div" htmlClass="col-sm-2"/>
                        <container name="eshoper_footer_policies" label="Eshoper Footer Policies" as="eshoper_footer_policies" htmlTag="div" htmlClass="col-sm-2"/>
                        <container name="eshoper_footer_about_shopper" label="Eshoper Footer About Shopper" as="eshoper_footer_about_shopper" htmlTag="div" htmlClass="col-sm-2"/>
                        <container name="eshoper_footer_new_letter" htmlTag="div" htmlClass="col-sm-3 col-sm-offset-1"/>
                    </container>
                </container>
            </container>
            <container name="footer_bottom" htmlTag="div" htmlClass="footer-bottom">
                <container htmlTag="div" htmlClass="container">
                    <container htmlTag="div" htmlClass="row">
                        <container name="footer_copyright" htmlTag="div" htmlClass="pull-left"/>
                    </container>
                </container>
            </container>
        </referenceContainer>

        <move element="page.top" destination="header.container" after="header-wrapper"/>
        <move element="top.links" destination="header-shop-menu"/>
        <move element="logo" destination="header-logo"/>
        <move element="top.search" destination="top_search"/>
        <move element="copyright" destination="footer_copyright"/>
        <move element="form.subscribe" destination="eshoper_footer_new_letter"/>
        <referenceBlock name="report.bugs" remove="true"/>
        <referenceBlock name="footer_links" remove="true"/>
        <referenceBlock name="header.panel" remove="true" />
        <referenceBlock name="advanced-search-link" remove="true"/>
        <referenceBlock name="columns.top" remove="true"/>
    </body>
</page>

<?xml version="1.0" encoding="UTF-8"?>
<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget id="Thangnt_banner_manager" class="Thangnt\Banner\Block\Banner\BannerWidget">
        <label translate="true">Banner Widget</label>

        <description translate="true">Display Banner</description>

        <parameters>
            <parameter name="auto" xsi:type="select" visible="true"
                       source_model="Magento\Config\Model\Config\Source\Yesno">
                <label translate="true">Automatically transition</label>
            </parameter>

            <parameter name="pager" xsi:type="select" visible="true"
                       source_model="Magento\Config\Model\Config\Source\Yesno">
                <label translate="true">Display pager</label>
            </parameter>

            <parameter name="speed" xsi:type="text" visible="true">
                <label translate="true">Slide transition duration (in ms)</label>
            </parameter>

            <parameter name="banner_count" xsi:type="text" required="true" visible="true">
                <label translate="true">Number of Banners to Display</label>
                <value>10</value>
            </parameter>

            <parameter name="slide_template" xsi:type="select" required="true" visible="true">
                <label translate="true">Template</label>
                <options>
                    <option name="bxslide" value="bxslide_thangnt" selected="true">
                        <label translate="true">bxslider</label>
                    </option>
                    <option name="flexslider" value="flexslide_thangnt">
                        <label translate="true">flexslide</label>
                    </option>
                </options>
            </parameter>
        </parameters>
    </widget>
</widgets>

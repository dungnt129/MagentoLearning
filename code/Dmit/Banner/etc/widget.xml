<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget id="dmit_banner_manager" class="Dmit\Banner\Block\Banner\BannerWidget">
        <label translate="true">Banner widget</label>
        <description translate="true">Display widget</description>
        <parameters>
            <parameter name="auto" xsi:type="select" visible="true"
                       source_model="Magento\Config\Model\Config\Source\Yesno">
                <label translate="true">Automatically transition</label>
            </parameter>
            <parameter name="speed" xsi:type="text" required="true" visible="true">
                <label translate="true">Slide transition duration(in ms)</label>
            </parameter>
            <parameter name="pager" xsi:type="select" visible="true"
                       source_model="Magento\Config\Model\Config\Source\Yesno">
                <label translate="true">Display pager</label>
            </parameter>
            <parameter name="banner_count" xsi:type="text" required="true" visible="true">
                <label translate="true">Number of image display in slide</label>
                <value>10</value>
            </parameter>
            <parameter name="slide" xsi:type="select" required="true" visible="true">
                <label translate="true">Template slide</label>
                <options>
                    <option name="default" value="" selected="true">
                        <label translate="true">Choose template</label>
                    </option>
                    <option name="bxslider" value="bxslider">
                        <label translate="true">BxSlide</label>
                    </option>
                    <option name="flexslider" value="flexslider">
                        <label translate="true">Flexslider</label>
                    </option>
                </options>
            </parameter>
        </parameters>
    </widget>
</widgets>

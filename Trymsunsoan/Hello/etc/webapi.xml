<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <!-- Example: curl http://mydomain.com/rest/V1/hello/name/Khang -->
    <route url="/V1/hello/name/:name" method="GET">
        <service class="Trymsunsoan\Hello\Api\HelloInterface" method="name"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>

    <!-- Example: curl http://mydomain.com/rest/V1/hello/getprotduct -->
    <route url="/V1/hello/name/:name" method="GET">
        <service class="Trymsunsoan\Hello\Api\HelloInterface" method="getprotduct"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>

    <!-- Example: curl -d '{"nums":[1.1,2.2,3.3]}' -H 'Content-Type: application/json' http://mydomain.com/rest/V1/hello/sum -->
    <route url="/V1/hello/sum" method="POST">
        <service class="Trymsunsoan\Hello\Api\HelloInterface" method="sum"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>